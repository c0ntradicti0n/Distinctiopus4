{
    "dataset_reader": {
        "type": "conll2003",
        "coding_scheme": "BIOUL",
        "tag_label": "ner",
        "token_indexers": {
            "antonyms": {
                "type": "single_id",
                "lowercase_tokens": true
            },
            "cohyponyms": {
                "type": "single_id",
                "lowercase_tokens": true
            },
            "elmo": {
                "type": "elmo_characters"
            },
            "token_characters": {
                "type": "characters",
                "min_padding_length": 3
            }
        }
    },
    "iterator": {
        "type": "basic",
        "batch_size": 64
    },
    "model": {
        "type": "attentive_crf_tagger",
        "calculate_span_f1": true,
        "constrain_crf_decoding": true,
        "dropout": 0.5,
        "encoder": {
            "type": "stacked_bidirectional_lstm",
            "hidden_size": 78,
            "input_size": 349,
            "num_layers": 3
        },
        "include_start_end_transitions": false,
        "label_encoding": "BIOUL",
        "regularizer": [
            [
                "scalar_parameters",
                {
                    "alpha": 0.1,
                    "type": "l2"
                }
            ]
        ],
        "text_field_embedder": {
            "token_embedders": {
                "antonyms": {
                    "type": "xnym_embedder",
                    "projection_dim": 20,
                    "xnyms": "antonyms"
                },
                "cohyponyms": {
                    "type": "xnym_embedder",
                    "projection_dim": 20,
                    "xnyms": "cohyponyms"
                },
                "elmo": {
                    "type": "elmo_token_embedder",
                    "do_layer_norm": false,
                    "dropout": 0,
                    "options_file": "models/elmo_2x1024_128_2048cnn_1xhighway_options.json",
                    "weight_file": "models/elmo_2x1024_128_2048cnn_1xhighway_weights.hdf5"
                },
                "token_characters": {
                    "type": "character_encoding",
                    "embedding": {
                        "embedding_dim": 9
                    },
                    "encoder": {
                        "type": "cnn",
                        "conv_layer_activation": "relu",
                        "embedding_dim": 9,
                        "ngram_filter_sizes": [
                            3
                        ],
                        "num_filters": 53
                    }
                }
            }
        }
    },
    "train_data_path": "./corpus_data/train.txt",
    "validation_data_path": "./corpus_data/valid.txt",
    "trainer": {
        "cuda_device": -1,
        "grad_norm": 1,
        "histogram_interval": 10,
        "num_epochs": 100,
        "num_serialized_models_to_keep": 70,
        "optimizer": {
            "type": "adam"
        },
        "patience": 10,
        "shuffle": false,
        "validation_metric": "+f1-measure-overall"
    }
}